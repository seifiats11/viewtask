<Window x:Class="veiwtask._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:veiwtask._1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="650">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="1" Text="Task Management System"  FontSize="20" FontWeight="Bold"  Foreground="#FF2C3E50"  HorizontalAlignment="Center"   Margin="0,0,0,30"/>

        <Border Grid.Row="2" BorderBrush="#FFBDC3C7" BorderThickness="1" Background="#FFF5F5F5" Padding="20" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Username:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtUsername" Height="30" FontSize="14" BorderBrush="#FFBDC3C7" BorderThickness="1"/>
                <TextBlock Text="Password:" FontWeight="Bold" Margin="0,10,0,5"/>
                <PasswordBox x:Name="txtPassword" Height="30" FontSize="14" BorderBrush="#FFBDC3C7" BorderThickness="1"/>
            </StackPanel>
        </Border>

        <Button Grid.Row="3" x:Name="btnLogin" Content="Login"   Click="BtnLogin_Click"   Background="White" Foreground="Black"   FontWeight="Bold" FontSize="14" Height="35" Width="100" HorizontalAlignment="Center"/>

        <TextBlock Grid.Row="4" x:Name="txtMessage"  Foreground="Red" TextWrapping="Wrap" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="12"/>
    </Grid>
</Window>
